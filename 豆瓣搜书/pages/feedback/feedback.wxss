/* pages/feedback/feedback.wxss */
page{
  height: 100%;
}

.feedback {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form {
  padding: 0 20rpx;
}

.name {
  display: flex;
  margin: 20rpx 0;
}

.name .input-name {
  width: 100%;
  padding: 20rpx;
  border-bottom: 2rpx solid gray;
}

.textarea {
  margin-bottom: 20rpx;
  border: 2rpx solid gray;
  border-radius: 5px;
}

.view-textarea {
   display: flex;

}

.view-textarea .textarea-feedback {
  width: 100%;
  height:8rem;
  padding: 20rpx;
}

.textarea .wordNumber {
  text-align: right;
  padding-bottom: 20rpx;
  padding-right: 20rpx;
  color: grey;
}


.form .btn-submit {
  background-color: grey;
}