/* pages/detail/detail.wxss */

.detail{
  padding: 0 20rpx;
}

.detail .cover{
  padding: 20rpx 0;
}

.detail .cover image{
  width: 100%;
}

.detail .info {
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
}

.detail .left {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.detail .left .title{
  font-size: 2rem;
  font-weight: bold;
}

.detail .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 30%;
  border-radius: 2rpx solid grey;
  box-shadow: 5rpx 5rpx 5rpx 5rpx gainsboro;
}

.small {
  font-size: 0.8rem;
  color: grey;
}

.detail .right .big {
  font-weight: bold;
  font-size: 1.8rem;
  color: black;
}

.introduce {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  padding: 10rpx 0;
  border-top: 1rpx solid grey;
}

.introduce .title {
  font-size: 1.1rem;
  color: grey;
}

.introduce .content {
  font-size: 0.9rem;
  
}

